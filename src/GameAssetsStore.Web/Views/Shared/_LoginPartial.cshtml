@using GameAssetsStore.Data.Models;
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-controller="User" asp-action="PublicProfile" asp-route-username="@User.Identity?.Name">@User.Identity?.Name</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="" asp-controller="Account" asp-action="SignOut">
                <button type="submit" class="nav-link btn btn-link text-white">Sign Out</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item p-1">
            <a class="btn btn-outline-light" asp-area="" asp-controller="Account" asp-action="SignUp">Sign Up</a>
        </li>
        <li class="nav-item p-1">
            <a class="btn btn-outline-light" asp-area="" asp-controller="Account" asp-action="SignIn">Sign In</a>
        </li>
    }
</ul>
