@model AccountEmailChangeInputModel

@{
    ViewData["Title"] = "Email Change";
}

<h4>
    Change email address.
</h4>

<form method="post" asp-controller="Settings" asp-action="ChangeEmail">
    @if (Model.Email != null)
    {
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    }
    <div class="form">
        <label asp-for="@Model.Email" class="form-label"></label>
        <input asp-for="@Model.Email" class="form-control bg-black text-light border-secondary" autocomplete="Email" />
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
    </div>
    <br />
    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-outline-light">Save</button>
    </div>
    <br />
</form>