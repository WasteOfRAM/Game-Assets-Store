@model PasswordChangeInputModel

@{
    ViewData["Title"] = "Password Change";
}

<h4>
    Change your account password.
</h4>

<form method="post" asp-controller="Settings" asp-action="ChangePassword">
    @if (Model.OldPassword != null)
    {
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    }
    <div class="form">
        <label asp-for="@Model.OldPassword" class="form-label"></label>
        <input asp-for="@Model.OldPassword" class="form-control" autocomplete="password" />
        <span asp-validation-for="@Model.OldPassword" class="text-danger"></span>
    </div>
    <div class="form">
        <label asp-for="@Model.NewPassword" class="form-label"></label>
        <input asp-for="@Model.NewPassword" class="form-control" autocomplete="password" />
        <span asp-validation-for="@Model.NewPassword" class="text-danger"></span>
    </div>
    <div class="form">
        <label asp-for="@Model.ConfirmPassword" class="form-label"></label>
        <input asp-for="@Model.ConfirmPassword" class="form-control" autocomplete="password" />
        <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
    </div>
    <br />
    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
    <br />
</form>