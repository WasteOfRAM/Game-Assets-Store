@model EditAssetFormModel

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <partial name="_PublishAssetPartial" model="new Tuple<bool, string>(Model.AssetInfo.IsPublished, Model.AssetInfo.AssetId.ToString())" />
    
    <div class="row justify-content-center pt-3">
        <partial name="_EditAssetInfoPartial" model="@Model.AssetInfo" />
    </div>
    <div class="row justify-content-center pt-3">
        <partial name="_UpdateAssetFilePartial" model="@Model.AssetFile" />
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}