@model IEnumerable<LibraryAssetCardViewModel>

@{
    ViewData["Title"] = "Library";
}

<div class="container">
    <h3>
        @ViewData["Title"]
    </h3>
    <hr />
    <div class="row row-cols-1 row-cols-md-5 g-2">
        @if (Model.Count() == 0)
        {
            <h3>No Results</h3>
        }
        else
        {
            @foreach (var asset in Model)
            {
                <partial name="_LibraryAssetCardPartial" model="asset" />
            }
        }
    </div>
</div>
