@model LibraryAssetCardViewModel


<div class="col">
    <div class="card mb-3 bg-black shadow border-light h-100" style="max-width: 320px;">
        <div class="ratio ratio-16x9">
            <img src="@Model.ImageUrl" class="card-img" alt="...">
        </div>
        <div class="card-body">
            <h5 class="card-title">@Model.AssetName</h5>
            <div class="d-grid btn-group">
                <a asp-area="" asp-controller="Shop" asp-action="Asset" asp-route-id="@Model.Id.ToString()" class="btn btn-outline-light m-md-2">Asset shop page</a>
                <a asp-area="" asp-controller="Asset" asp-action="Download" asp-route-assetId="@Model.Id.ToString()" class="btn btn-outline-light m-md-2">Download</a>
            </div>
        </div>
    </div>
</div>