@model SignUpInputModel

@{
    ViewData["Title"] = "Sign Up";
}


<div class="row justify-content-center">
    <div class="col-md-3">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-md-2">
                <input asp-for="@Model.Username" class="form-control bg-black text-light border-secondary" autocomplete="username" aria-required="true" />
                <label asp-for="@Model.Username" class="form-label"></label>
                <span asp-validation-for="@Model.Username" class="text-danger"></span>
            </div>
            <div class="form-floating mb-md-2">
                <input asp-for="@Model.Email" class="form-control bg-black text-light border-secondary" autocomplete="emain" aria-required="true" />
                <label asp-for="@Model.Email" class="form-label"></label>
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-md-2">
                <input asp-for="@Model.Password" class="form-control bg-black text-light border-secondary" autocomplete="new-password" aria-required="true" />
                <label asp-for="@Model.Password"></label>
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-md-2">
                <input asp-for="@Model.ConfirmPassword" class="form-control bg-black text-light border-secondary" autocomplete="new-password" aria-required="true" />
                <label asp-for="@Model.ConfirmPassword"></label>
                <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-outline-primary mb-md-2">Register</button>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
