@model SignInInputModel

@{
    ViewData["Title"] = "Sign In";
}

<div class="row justify-content-center">
    <div class="col-md-3">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-md-2">
                <input asp-for="@Model.Username" class="form-control bg-black text-light border-secondary" autocomplete="username" aria-required="true" />
                <label asp-for="@Model.Username" class="form-label"></label>
                <span asp-validation-for="@Model.Username" class="text-danger"></span>
            </div>
            <div class="form-floating mb-md-2">
                <input asp-for="@Model.Password" class="form-control bg-black text-light border-secondary form-control-" autocomplete="current-password" aria-required="true" />
                <label asp-for="@Model.Password" class="form-label"></label>
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div>
                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-outline-primary mb-md-2">Sign in</button>
            </div>
            <div>
                <div class="checkbox mb-md-2">
                    <label asp-for="@Model.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="@Model.RememberMe" />
                        @Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
